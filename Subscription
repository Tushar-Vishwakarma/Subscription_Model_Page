    name: "Pro",
    price: "$29/mo",
    features: ["Everything in Basic", "Advanced analytics", "Priority support"],
    mostPopular: true,
  },
  {
    name: "Enterprise",
    price: "Contact us",
    features: ["Custom solutions", "Dedicated account manager", "Enterprise-grade security"],
    mostPopular: false,
  },
];

export default function SubscriptionPage() {
